<mvc:View controllerName="sync.dc.pp.plantopo.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified">
    <Page id="page" title="{i18n>title}">

        <l:Splitter>
            <VBox width="auto">
                <Panel width="auto" class="sapUiSmallMarginBottom">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="조회 조건" level="H3" class="myCustomHeader"/>
                        </Toolbar>
                    </headerToolbar>
                    <!-- 조회 연도와 ComboBox를 묶음 -->
                    <HBox width="100%" alignItems="Center">
                        <Label text="연도 :" class="myLabelStyle"/>
                        <ComboBox id="yearComboBox" width="120px">
                            <layoutData>
                                <FlexItemData styleClass="sapUiSmallMarginBegin" />
                            </layoutData>
                        </ComboBox>
                        <!-- 조회 버튼 -->

                        <Label text="월 :" class="myLabelStyle">
                            <layoutData>
                                <FlexItemData styleClass="sapUiSmallMarginBegin" />
                            </layoutData>
                        </Label>
                        <ComboBox id="monthComboBox" width="80px">
                            <layoutData>
                                <FlexItemData styleClass="sapUiSmallMarginBegin" />
                            </layoutData>
                        </ComboBox>

                        <ToolbarSpacer/>
                        <!-- Search 버튼 -->
                        <Button id="searchButton" text="Search" type="Emphasized" icon="sap-icon://search" press="onSearch">
                            <layoutData>
                                <FlexItemData styleClass="sapUiSmallMarginBegin" />
                            </layoutData>
                        </Button>
                    </HBox>
                </Panel>
                <Table id="tab1" width="100%" items = "{Plan>/planedOrder}" mode="SingleSelectMaster" itemPress="openCalendar">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="계획 주문" class="myTableHeader"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="15%">
                            <header>
                                <Label text = "계획주문 ID"/>
                            </header>
                        </Column>
                        <Column  width="20%">
                            <header>
                                <Label text = "생산 운영 계획 ID"/>
                            </header>
                        </Column>
                        <Column width="20%">
                            <header>
                                <Label text = "자재 번호"/>
                            </header>
                        </Column>
                        <Column width="15%">
                            <header>
                                <Label text = "생산 시작일"/>
                            </header>
                        </Column>
                        <Column width="15%">
                            <header>
                                <Label text = "생산 종료일"/>
                            </header>
                        </Column>
                        <Column width="8%">
                            <header>
                                <Label text = "수량"/>
                            </header>
                        </Column>
                        <Column width="7%">
                            <header>
                                <Label text = "단위"/>
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <Text text="{Plan>PlanId}"/>
                                <Text text="{Plan>OpId}"/>
                                <Text text="{Plan>MatId}"/>
                                <Text text="{Plan>PoSDate}"/>
                                <Text text="{Plan>PoEDate}"/>
                                <Text text="{Plan>Qty}"/>
                                <Text text="{Plan>Uom}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <layoutData>
                    <l:SplitterLayoutData size="50%" resizable="false" />
                </layoutData>
            </VBox>
<VBox id="detailBox" visible="false">
  <Panel width="97%">
<headerToolbar>
    <Toolbar>
        <Title text="일자 선택" level="H3" class="myCustomHeader"/>
    </Toolbar>
</headerToolbar>
  <u:Calendar id="calendar" width="100%" showWeekNumbers="false" select="handleCalendarSelect" intervalSelection="false" singleSelection="false" />
  </Panel>
  <VBox id="qtyInputBox" class="sapUiSmallMarginTop"/>
  <Button text="저장" press="onSaveProductionOrders"/>
<Button	press="handleRemoveSelection" text="Remove All Selected Dates" />
<List
				id="selectedDatesList"
				class="labelMarginLeft"
				noDataText="No Dates Selected"
				headerText="선택 일자"
				items="{path: '/selectedDates'}">
<StandardListItem title="{Date}" />
		</List>

  <layoutData>
    <l:SplitterLayoutData size="auto" resizable="false" />
  </layoutData>
</VBox>
</l:Splitter>

    </Page>
</mvc:View>

